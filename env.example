# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_TYPE=sqlite
# SQLite配置
SQLITE_DB_PATH=./data/member.db
# PostgreSQL配置
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=member_db
PG_USER=postgres
PG_PASSWORD=postgres

# JWT配置
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# 应用配置
DEFAULT_APP_ID=default-app
DEFAULT_APP_SECRET=default-secret-change-in-production

# S3对象存储配置
# 存储类型: r2 或 tencent
STORAGE_TYPE=r2
# R2配置
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-bucket.r2.dev
# 腾讯云COS配置
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_REGION=ap-guangzhou
TENCENT_BUCKET=your-bucket-name
TENCENT_PUBLIC_URL=https://your-bucket.cos.ap-guangzhou.myqcloud.com

# 文件上传配置
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# 短信配置（smsbao短信宝）
SMS_ENABLED=false
SMS_USERNAME=your-sms-username
SMS_PASSWORD=your-sms-password
SMS_SIGN=your-sms-sign

# 邮件配置
EMAIL_ENABLED=false
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# 后台管理配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_SECRET=admin-secret-key-change-in-production

